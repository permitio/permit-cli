{
	"name": "@permitio/cli",
	"version": "0.1.2",
	"description": "Permit.io CLI tool",
	"main": "dist/index.js",
	"license": "MIT",
	"bin": {
		"permit": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=21.1.0"
	},
	"scripts": {
		"build": "tsc",
		"postbuild": "rimraf dist/commands/env/export/templates && cpx 'source/commands/env/export/templates/*.hcl' 'dist/commands/env/export/templates'",
		"predev": "cpx 'source/commands/env/export/templates/*.hcl' 'dist/commands/env/export/templates'",
		"dev": " NODE_NO_WARNINGS=1 tsc --watch",
		"lint": "prettier --check ./source && eslint \"source/**/*.{js,ts,tsx}\"",
		"lint:fix": "eslint \"source/**/*.{js,ts,tsx}\" --fix",
		"test": "prettier --check ./source && vitest run --coverage",
		"simple-check": "npx tsx ./source/cli.tsx pdp check -u filip@permit.io -a create -r task",
		"build-artifacts": "npm run build && nexe dist/cli.js --target 'macos-x64-14.15.3' --target 'linux-x64-14.15.3' --target 'windows-x64-14.15.3' --output dist/permit",
		"test:ts": "tsc --noEmit"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@scaleway/random-name": "^5.1.1",
		"cli-table": "^0.3.11",
		"clipboardy": "^4.0.0",
		"delay": "^6.0.0",
		"fuse.js": "^7.0.0",
		"handlebars": "^4.7.8",
		"he": "^1.2.0",
		"ink": "^5.1.0",
		"ink-ascii": "^0.0.4",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-select-input": "^6.0.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"keytar": "^7.9.0",
		"micro-key-producer": "^0.7.2",
		"open": "^10.1.0",
		"openapi-fetch": "^0.13.4",
		"pastel": "^3.0.0",
		"permitio": "^2.7.2",
		"react": "^18.2.0",
		"zod": "^3.21.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.14.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/cli-table": "^0.3.4",
		"@types/he": "^1.2.3",
		"@types/react": "^18.0.32",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/ui": "^2.1.8",
		"chalk": "^5.2.0",
		"cpx": "^1.5.0",
		"delay": "^6.0.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-define-config": "^2.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-sonarjs": "^2.0.4",
		"globals": "^15.11.0",
		"ink-testing-library": "^4.0.0",
		"nexe": "^4.0.0-rc.2",
		"openapi-typescript": "^7.6.1",
		"parser": "^0.1.4",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.11.0",
		"vitest": "^2.1.8"
	}
}
