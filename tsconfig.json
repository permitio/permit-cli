{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"jsx": "react",
		"moduleResolution": "node16",
		"module": "Node16",
		"outDir": "dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"declaration": true,
	},
	"include": ["source"],
	"exclude": ["node_modules"]
}
